<form>
    <div class="form-group">
        <label for="brand">Марка:</label>
        <input type="text" class="form-control" id="brand">
    </div>
    <div class="form-group">
        <label for="model">Модель:</label>
        <input type="text" class="form-control" id="model">
    </div>
    <div class="form-group">
        <label for="minPrice">Стоимость BYN:</label><br>
        <input type="text" class="form-control" id="minPrice" placeholder="от">
        <input type="text" class="form-control" id="maxPrice" placeholder="до">
    </div>
    <div class="form-group">
        <label for="minMileage">Пробег:</label><br>
        <input type="text" class="form-control" id="minMileage" placeholder="от">
        <input type="text" class="form-control" id="maxMileage" placeholder="до">
    </div>
    <div id="transmission" class="btn-group">
        <button type="button" class="btn btn-default" id="manualBtn">Механика</button>
        <button type="button" class="btn btn-default" id="autoBtn">Автомат</button>
    </div>
    <button type="submit" class="btn btn-success">Искать</button>
</form>